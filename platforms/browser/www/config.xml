<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phoneticabc.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Phonetic Alphabet</name>
    <description>
        A simple app for translating into the NATO Phonetic Alphabet
    </description>
    <author email="marbiru@uribram.com" href="http://marbiru.com">
        Marbiru
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
